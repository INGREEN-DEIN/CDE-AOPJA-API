{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier", // prettier
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
  },
  "plugins": ["@typescript-eslint", "prettier"], // prettier
  "rules": {
    "quotes": ["error", "single"],
    "@typescript-eslint/no-explicit-any": ["error", { "fixToUnknown": true }],
    "no-empty": "error",
    "comma-dangle": [2, "always-multiline"],
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
    },
  },
}
